<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- En-tête -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥽"
                android:textSize="48sp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MQ FTP Server"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Optimisé pour Meta Quest 3"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/server_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏹️ Arrêté"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_error"
                    android:background="@drawable/status_background"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 IP: Recherche..."
                    android:textSize="14sp"
                    android:textColor="@color/status_info"
                    android:layout_marginTop="8dp"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Configuration et contrôles en 2 colonnes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Colonne gauche : Configuration -->
            <LinearLayout
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Configuration"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🔌 Port"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <EditText
                            android:id="@+id/ftp_port"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="2121"
                            android:inputType="number"
                            android:text="2121" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="👤 Utilisateur"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <EditText
                            android:id="@+id/ftp_user"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="admin"
                            android:text="admin" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🔒 Mot de passe"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <EditText
                            android:id="@+id/ftp_password"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="password"
                            android:text="password"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📁 Dossier"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ftp_root"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:hint="/Movies/ftp"
                                android:textSize="12sp"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_browse_folder"
                                style="@style/SecondaryButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:text="📂" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Colonne droite : Contrôles -->
            <LinearLayout
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎮 Contrôles"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_start_ftp"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🚀 Démarrer le serveur"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_stop_ftp"
                    style="@style/DangerButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="⏹️ Arrêter le serveur"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📡 Connexion FTP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Utilisez FileZilla ou WinSCP avec l'IP et le port affichés ci-dessus"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
