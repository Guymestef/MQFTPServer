<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vr_icon"
                android:textSize="48sp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/server_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/server_stopped"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_error"
                    android:background="@drawable/status_background"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ip_searching"
                    android:textSize="14sp"
                    android:textColor="@color/status_info"
                    android:layout_marginTop="8dp"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Configuration and controls -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Configuration Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/configuration_title"
                android:textColor="@color/primary_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Row 1: Username, Password and Port -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/username_label"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ftp_user"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/username_hint"
                        android:text="@string/default_username"
                        android:minHeight="48dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password_label"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ftp_password"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:text="@string/default_password"
                        android:minHeight="48dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/port_label"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ftp_port"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/port_hint"
                        android:inputType="number"
                        android:text="@string/default_port"
                        android:minHeight="48dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Root folder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/root_folder_label"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/ftp_root"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="@string/root_path_hint"
                        android:textSize="12sp"
                        android:minHeight="48dp"
                        android:gravity="center_vertical" />

                    <Button
                        android:id="@+id/btn_browse_folder"
                        style="@style/SecondaryButtonStyle"
                        android:layout_width="56dp"
                        android:layout_height="48dp"
                        android:text="@string/browse_button"
                        android:minHeight="48dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- SÃ©parateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_secondary"
                android:alpha="0.3"
                android:layout_marginVertical="16dp" />

            <!-- Server Controls Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/server_controls_title"
                android:textColor="@color/primary_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Horizontal button layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btn_start_ftp"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/start_server_button"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_stop_ftp"
                    style="@style/DangerButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/stop_server_button"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Connection information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/ftp_connection_title"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connection_instructions"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
